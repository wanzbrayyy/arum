<%- include('../partials/header') %>

<div class="auth-card">
    <div class="logo-title">WARKOP ARUM DALU</div>
    <div class="logo-subtitle">ADMIN REGISTRATION (ADMIN ACCESS ONLY)</div>
    <% if (typeof msg !== 'undefined') { %>
        <div class="alert-message"><%= msg %></div>
    <% } %>
    <form action="/auth/register" method="POST">
        <div class="form-group">
            <i class="fas fa-user-tie"></i>
            <input type="text" id="full-name" name="fullName" placeholder="Full Name (optional)">
        </div>
        <div class="form-group">
            <i class="fas fa-user"></i>
            <input type="text" id="username" name="username" placeholder="Username" required>
        </div>
        <div class="form-group">
            <i class="fas fa-envelope"></i>
            <input type="text" id="email" name="email" placeholder="Email (optional)">
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i>
            <input type="password" id="password" name="password" placeholder="Password" required>
        </div>
        <div class="form-group">
            <i class="fas fa-lock"></i>
            <input type="password" id="confirm-password" name="confirmPassword" placeholder="Confirm Password" required>
        </div>
        <div class="form-group">
            <i class="fas fa-user-tag"></i>
            <select id="role" name="role" required>
                <option value="cashier">Cashier</option>
                <option value="admin">Admin</option>
            </select>
        </div>
        <button type="submit" class="btn">Register Employee</button>
    </form>
    <a href="/auth/login" class="link">Already have an account? Login here.</a>
</div>

<%- include('../partials/footer') %>